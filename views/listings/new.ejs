<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">

            <h3>Create a New Listing</h3>
            <form method="post" action="/listings" novalidate class="needs-validation">
                <div class="md-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="md-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="enter description" class="form-control"
                        required></textarea>
                        <div class="invalid-feedback">
                            Please enter a short description
                        </div>
                </div>

                <div class="md-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input name="listing[image.url]" placeholder="enter URL/Link" type="text" class="form-control">
                </div>

                <div class="row">
                    <div class="md-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="enter price" class="form-control" required>
                        <div class="invalid-feedback">
                            Price should be valid
                        </div>
                    </div>

                    <div class="md-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="enter country" type="text" class="form-control"
                            required>
                            <div class="invalid-feedback">
                            Country name  should be valid
                            </div>
                    </div>
                </div>

                <div class="md-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="enter location" type="text" class="form-control"
                        required>
                        <div class="invalid-feedback">
                          Location should be valid
                        </div>
                </div>

                <button class="btn btn-dark add-btn mt-3">Add</button>

            </form>
        </div>
    </div>
